extends layout

block content
    .container
        if users 
            p.text-left Usuarios 
                span.float-right Número de resultados: #{users.length}
            hr
            div.list-group
                each user in users
                    a.list-group-item.list-group-item-action(href='#') #{user.last_names +', ' + user.names}
        if institutions 
            p.text-left Instituciones 
                span.float-right Número de resultados: #{institutions.length}
            hr
            div.list-group
                each institution in institutions
                    a.list-group-item.list-group-item-action #{institution.name}
        
        