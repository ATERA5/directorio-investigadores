doctype html
html
  head
  block head
    title='Red de Investigadores'
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='icon', href='/images/icon.png')
  body
    block header
  
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top.text-nowrap
      .container
        a.navbar-brand(href='#')
          img.img-fluid(src='/images/icon.png', alt='Red de Investigadores' id='navbar-brand')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse(id='navbarNav')
          ul.navbar-nav.mr-auto
            li.nav-item.mx-1
              a.nav-link(href='/')
                strong Inicio
            li.nav-item
              from.form-inline(role='search')
                .input-group
                  .input-group-prepend
                    select.form-control
                      option(value='1') Todos
                      option(value='2') Investigador
                      option(value='3') Estado
                      option(value='4') Institución
                  input.form-control(type="text" placeholder='Busqueda rápida')
                  .input-group-append
                    button.btn.btn-secondary(type='submit') Buscar
           ul.navbar-nav
            if !isAuthenticated
              li.nav-item-mx-1
                a.nav-link(href='/acceso')
                    strong Iniciar Sesión
            if !isAuthenticated
              li.nav-item.mx-1
                a.nav-link(href='/registro')
                  strong Registrarse
            if isAuthenticated
              li.nav-item.mx-1
                a.nav-link(href='/perfil')
                  strong Perfil
            if isAuthenticated
              li.nav-item.mx-1
                a.nav-link(href='/salir')
                  strong Salir


    block content

    block scripts
      script(src='/jquery/jquery.min.js')
      script(src='/bootstrap/js/bootstrap.min.js')
      script(src='/popper/popper.min.js')
      script(src='/js/index.js')
